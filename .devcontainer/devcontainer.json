{
  "name": "Laravel Development Container",
  "dockerComposeFile": "../docker-compose.dev.yml",
  "service": "laravel-dev",
  "workspaceFolder": "/var/www/html",
  "shutdownAction": "stopCompose",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "bmewburn.vscode-intelephense-client",
        "onecentlin.laravel-blade",
        "shufo.vscode-blade-formatter",
        "ryannaddy.laravel-artisan",
        "codingyu.laravel-goto-view",
        "amiralizadeh9480.laravel-extra-intellisense",
        "ms-vscode.vscode-typescript-next",
        "formulahendry.auto-rename-tag",
        "ms-vscode.vscode-eslint",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-docker"
      ],
      "settings": {
        "php.suggest.basic": false,
        "php.validate.enable": false,
        "intelephense.environment.includePaths": [
          "/var/www/html"
        ],
        "intelephense.files.associations": [
          "*.php",
          "*.phtml"
        ],
        "intelephense.files.exclude": [
          "**/vendor/**",
          "**/node_modules/**",
          "**/storage/framework/**",
          "**/bootstrap/cache/**"
        ],
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "files.eol": "\\n",
        "terminal.integrated.defaultProfile.linux": "bash",
        "blade.format.enable": true,
        "tailwindCSS.includeLanguages": {
          "blade": "html"
        },
        "tailwindCSS.files.exclude": [
          "**/node_modules/**",
          "**/vendor/**"
        ]
      }
    }
  },

  "forwardPorts": [80, 3306, 6379, 8080, 8081, 3000, 9090],
  "portsAttributes": {
    "80": {
      "label": "Laravel App",
      "onAutoForward": "openPreview"
    },
    "3306": {
      "label": "MySQL"
    },
    "6379": {
      "label": "Redis"
    },
    "8080": {
      "label": "PhpMyAdmin",
      "onAutoForward": "openPreview"
    },
    "8081": {
      "label": "Redis Commander",
      "onAutoForward": "openPreview"
    },
    "3000": {
      "label": "Grafana",
      "onAutoForward": "openPreview"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "openPreview"
    }
  },

  "postCreateCommand": "composer install && npm install && php artisan key:generate",
  "postStartCommand": "php artisan migrate --force",

  "remoteUser": "www-data",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  }
}