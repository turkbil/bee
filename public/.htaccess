# =============================================================================
# CACHE-CONTROL HEADERS - KALICI Ã‡Ã–ZÃœM
# =============================================================================
# JS/CSS dosyalarÄ± versioned_asset() ile yÃ¼klenir (?v=timestamp)
# Query string deÄŸiÅŸince browser otomatik yeni dosyayÄ± Ã§eker!
# =============================================================================

<IfModule mod_headers.c>
    # JS/CSS: Public cache + ETag + version query string bazlÄ± cache
    <FilesMatch "\.(js|css)$">
        # Public cache: Browser ve CDN cache'leyebilir
        Header set Cache-Control "public, max-age=31536000, immutable"

        # ETag: Dosya deÄŸiÅŸirse ETag deÄŸiÅŸir, browser yeniden indirir
        Header set ETag "\"versioned-asset\""

        # Vary: Query string deÄŸiÅŸince yeni dosya (versioned_asset sayesinde)
        Header append Vary Accept-Encoding
    </FilesMatch>

    # Images: Uzun cache (genelde deÄŸiÅŸmez)
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp|ico)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>

    # Fonts: Uzun cache (asla deÄŸiÅŸmez)
    <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # HTML: No cache (dinamik content)
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# =============================================================================
# LARAVEL REWRITE RULES
# =============================================================================

<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # =============================================================================
    # NON-WWW TO WWW REDIRECT
    # =============================================================================
    RewriteCond %{HTTP_HOST} ^muzibu\.com$ [NC]
    RewriteRule ^(.*)$ https://www.muzibu.com/$1 [L,R=301]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # ðŸŽ¯ Favicon.ico - Tenant-aware, Settings'den Ã§ek (FaviconController)
    # public/favicon.ico varsa bile Laravel'e yÃ¶nlendir
    RewriteRule ^favicon\.ico$ index.php [L]

    # Force rewrite for tenant1001 storage path (bypass symlink check for LiteSpeed phpSuExec)
    # Other tenants are on different servers
    RewriteCond %{REQUEST_URI} ^/storage/tenant1001/
    RewriteRule ^ index.php [L]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
