    /**
     * SEO verisini veritabanƒ±na kaydet
     */
    public function saveSeoData(string $modelType, int $modelId, string $field, string $value, string $language, int $userId): array
    {
        try {
            // Model class'ƒ±nƒ± belirle
            $modelClass = match($modelType) {
                'page' => \Modules\Page\App\Models\Page::class,
                'portfolio' => \Modules\Portfolio\App\Models\Portfolio::class,
                'announcement' => \Modules\Announcement\App\Models\Announcement::class,
                default => throw new \InvalidArgumentException("Ge√ßersiz model t√ºr√º: {$modelType}")
            };

            // Model'i bul
            $model = $modelClass::find($modelId);
            if (!$model) {
                return ['success' => false, 'error' => 'Model bulunamadƒ±'];
            }

            // SEO alanƒ±nƒ± g√ºncelle
            $seoData = $model->seo_data ?? [];
            
            // Dil bazlƒ± g√ºncelleme
            if (!isset($seoData[$language])) {
                $seoData[$language] = [];
            }

            $seoData[$language][$field] = $value;

            // Modeli g√ºncelle
            $model->update([
                'seo_data' => $seoData,
                'updated_at' => now()
            ]);

            Log::info('SEO Data Saved', [
                'model_type' => $modelType,
                'model_id' => $modelId,
                'field' => $field,
                'language' => $language,
                'user_id' => $userId
            ]);

            return [
                'success' => true,
                'data' => [
                    'model_type' => $modelType,
                    'model_id' => $modelId,
                    'field' => $field,
                    'value' => $value,
                    'language' => $language,
                    'updated_at' => $model->updated_at->toISOString()
                ]
            ];

        } catch (\Exception $e) {
            Log::error('SEO Data Save Error', [
                'error' => $e->getMessage(),
                'model_type' => $modelType,
                'model_id' => $modelId,
                'field' => $field
            ]);
            
            return ['success' => false, 'error' => 'Veri kaydedilirken hata olu≈ütu: ' . $e->getMessage()];
        }
    }
