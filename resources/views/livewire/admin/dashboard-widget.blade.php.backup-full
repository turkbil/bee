<script>
function clearSystemCache() {
    if (!confirm('Cache temizlensin mi?')) return;
    fetch('/admin/cache/clear-all', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showToast('Basarili', 'Cache temizlendi!', 'success');
        } else {
            showToast('Hata', data.message, 'error');
        }
    })
    .catch(error => showToast('Hata', error.message, 'error'));
}

document.addEventListener('DOMContentLoaded', function() {
    const chatMessages = document.getElementById('aiChatMessages');
    if (typeof Livewire !== 'undefined') {
        Livewire.on('message-sent', (data) => {
            if (!chatMessages) return;
            addMessage(data[0].userMessage, true);
            setTimeout(() => addMessage(data[0].aiResponse, false), 500);
        });
    }
    function addMessage(text, isUser) {
        if (!chatMessages) return;
        const div = document.createElement('div');
        div.className = 'ai-message';
        div.innerHTML = isUser ? `
            <div style="flex:1;text-align:right;"><div class="bubble" style="display:inline-block;">${text}</div></div>
            <div class="avatar user"><i class="fas fa-user"></i></div>
        ` : `
            <div class="avatar ai"><i class="fas fa-robot"></i></div>
            <div class="bubble">${text}</div>
        `;
        chatMessages.appendChild(div);
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }
});
</script>
