    private function parseAIResponse(string $content): array
    {
        if (empty($content)) return [];
        
        // Markdown temizleme
        $clean = preg_replace('/```(?:json)?\s*/', '', $content);
        $clean = preg_replace('/```\s*$/', '', $clean);
        
        $parsed = json_decode(trim($clean), true);
        
        return $parsed ?? [];
    }

